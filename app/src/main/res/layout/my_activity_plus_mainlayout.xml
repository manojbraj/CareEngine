<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.MyActivityPlus">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_backarrow"/>
        <com.h5c.careengage.designing.Calibri
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Basic Run"
            android:layout_below="@+id/ambulance_image"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3"
        android:background="@drawable/my_activity_bg"
        android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/black_transition_bg"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:paddingLeft="10dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@android:drawable/ic_dialog_info"
                                android:layout_gravity="center"/>
                            <com.h5c.careengage.designing.Calibri
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Basic"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="end|center"
                        android:paddingRight="20dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ico_forwardarrow"/>
                    </LinearLayout>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".7"
        android:orientation="vertical">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".8"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:orientation="vertical"
                        android:background="@color/my_activity_bg_gray">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:gravity="center">
                                <com.h5c.careengage.designing.Calibri
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="GPS Strength"
                                    android:textSize="16sp"
                                    android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginTop="5dp">
                                <ProgressBar
                                    android:layout_width="match_parent"
                                    android:layout_height="5dp"
                                    android:progress="80"
                                    style="?android:attr/progressBarStyleHorizontal"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="50dp"
                        android:background="@color/white"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight=".5"
                        android:background="@color/my_activity_bg_gray">
                            <com.h5c.careengage.designing.Calibri
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Music"
                                android:textSize="20sp"
                                android:textColor="@color/my_activity_red_text"
                                android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:background="@color/my_activity_bg_gray"
                    android:orientation="vertical">
                        <com.h5c.careengage.designing.Calibri
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="16sp"
                            android:paddingLeft="20dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray_glucose"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="13.5dp"/>
                                <LinearLayout
                                    android:id="@+id/indecator_bar"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center">
                                                <ImageView
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/white_round_bg"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:gravity="center">
                                            <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:src="@drawable/white_round_bg"/>
                                        </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_below="@+id/indecator_bar">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:orientation="vertical"
                                            android:layout_marginTop="5dp">
                                                <com.h5c.careengage.designing.Calibri
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Indoors"
                                                    android:gravity="center"/>
                                                <ImageView
                                                    android:layout_width="40dp"
                                                    android:layout_height="40dp"
                                                    android:src="@android:drawable/ic_menu_preferences"
                                                    android:layout_gravity="center"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".5"
                                            android:orientation="vertical">
                                                <com.h5c.careengage.designing.Calibri
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Outdoors"
                                                    android:gravity="center"/>
                                                <ImageView
                                                    android:layout_width="40dp"
                                                    android:layout_height="40dp"
                                                    android:src="@android:drawable/ic_menu_preferences"
                                                    android:layout_gravity="center"/>
                                        </LinearLayout>
                                </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:background="@color/my_activity_bg_gray"
                    android:orientation="vertical">
                        <com.h5c.careengage.designing.Calibri
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Device Orientation"
                            android:textSize="16sp"
                            android:paddingLeft="20dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="5dp">
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/dark_gray_glucose"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginRight="20dp"
                                    android:layout_marginTop="13.5dp"/>
                                <LinearLayout
                                    android:id="@+id/orientation_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:orientation="horizontal">
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".33"
                                            android:gravity="center">
                                                <ImageView
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/white_round_bg"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".33"
                                            android:gravity="center">
                                                <ImageView
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/white_round_bg"/>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".33"
                                            android:gravity="center">
                                                <ImageView
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:src="@drawable/white_round_bg"/>
                                        </LinearLayout>
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:layout_below="@+id/orientation_view"
                                android:layout_marginTop="5dp">
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".33"
                                        android:orientation="vertical">
                                            <com.h5c.careengage.designing.Calibri
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Handheld"
                                                android:gravity="center"/>
                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@android:drawable/ic_menu_preferences"
                                                android:layout_gravity="center"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".33"
                                        android:orientation="vertical">
                                            <com.h5c.careengage.designing.Calibri
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Left Arm"
                                                android:gravity="center"/>
                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@android:drawable/ic_menu_preferences"
                                                android:layout_gravity="center"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".33"
                                        android:orientation="vertical">
                                            <com.h5c.careengage.designing.Calibri
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Right Arm"
                                                android:gravity="center"/>
                                            <ImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:src="@android:drawable/ic_menu_preferences"
                                                android:layout_gravity="center"/>
                                    </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".2"
            android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center">
                        <Button
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:background="@drawable/my_activity_plus_reg_button_bg"
                            android:text="Start"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center">
                        <Button
                            android:layout_width="130dp"
                            android:layout_height="40dp"
                            android:background="@drawable/my_activity_plus_reg_button_bg"
                            android:text="Statistics"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>